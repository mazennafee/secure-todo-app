{
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
        "<rootDir>/jest.setup.js"
    ],
    "moduleNameMapper": {
        "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "transform": {
        "^.+\\.(js|jsx)$": "babel-jest"
    },
    "testMatch": [
        "**/__tests__/**/*.(test|spec).(js|jsx)",
        "**/*.(test|spec).(js|jsx)"
    ],
    "collectCoverageFrom": [
        "src/**/*.{js,jsx}",
        "!src/main.jsx",
        "!src/**/*.test.{js,jsx}"
    ]
}